<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baway.admin.dongjinjinjongdongapp.ZiLeiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:id="@+id/la"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dip"
            >
            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:id="@+id/fh"
                android:layout_marginTop="5dip"
                android:layout_gravity="center"
                android:layout_marginLeft="6dip"
                android:src="@drawable/xiaoyu"
                />
        </LinearLayout>
        <RelativeLayout
            android:padding="5dip"
            android:layout_width="260dp"
            android:layout_marginLeft="20dip"
            android:layout_height="wrap_content"
            android:background="@drawable/dot"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/sou"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <EditText
                android:id="@+id/head_sou"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:text="豆浆机免滤"
                android:gravity="center_vertical"
                android:paddingLeft="50dp"
                android:scrollbars="none"
                android:background="@null"
                android:layout_marginTop="5dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/jdd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_marginTop="5dip"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:src="@drawable/select_item"
                android:id="@+id/type"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/la"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:id="@+id/dd"
        >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="销量"
            android:id="@+id/xl"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="19sp"
            android:id="@+id/jg"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textColor="@color/Red"
                android:textSize="19sp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/sx"
                />
        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        android:layout_below="@+id/dd"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>
