<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/details_banner"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                app:layout_paddingLeftPercent="3%w"
                android:orientation="vertical"
                app:layout_heightPercent="25%w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_detailsTitle"
                    app:layout_textSizePercent="4%w"
                    android:text="标题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:textColor="#ff0000"
                    android:id="@+id/tv_detailsSubhead"
                    app:layout_textSizePercent="4%w"
                    android:text="标题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="#ff0000"
                    android:id="@+id/tv_detailsBargain"
                    app:layout_textSizePercent="6%w"
                    android:text="价格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:orientation="horizontal"
                app:layout_paddingPercent="2%w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="12%w">

                <ImageView
                    android:id="@+id/iv_shopIcon"
                    android:layout_gravity="center_vertical"
                    app:layout_widthPercent="27%w"
                    app:layout_heightPercent="10%w"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_shopDes"
                        android:layout_weight="1"
                        android:text="我是商家"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商家" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:orientation="horizontal"
                app:layout_heightPercent="15%w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_shopScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.9"
                        app:layout_textSizePercent="15%w" />

                    <TextView
                        android:textColor="#cccccc"
                        android:text="评价"
                        android:id="@+id/tv_shopScoreT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>
                <View
                    android:background="#cccccc"
                    android:layout_width="1sp"
                    android:layout_height="match_parent"/>
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        app:layout_textSizePercent="15%w"
                        android:text="999"
                        android:id="@+id/tv_shopNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#cccccc"
                        android:text="全部商品"
                        android:id="@+id/tv_shopNumT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>
                <View
                    android:background="#cccccc"
                    android:layout_width="1sp"
                    android:layout_height="match_parent"/>
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        app:layout_textSizePercent="15%w"
                        android:text="9"
                        android:id="@+id/tv_shopId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#cccccc"
                        android:text="商家id"
                        android:id="@+id/tv_shopIdT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                app:layout_paddingPercent="3%"
                app:layout_heightPercent="14%w"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:background="@drawable/details_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            app:layout_widthPercent="15%w"
                            app:layout_heightPercent="15%w"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ab7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            app:layout_textSizePercent="9%w"
                            android:text="联系供应商"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:background="@drawable/details_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            app:layout_widthPercent="15%w"
                            app:layout_heightPercent="15%w"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ayn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            app:layout_textSizePercent="9%w"
                            android:text="进店逛逛"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentRelativeLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>



        </com.zhy.android.percent.support.PercentLinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>
